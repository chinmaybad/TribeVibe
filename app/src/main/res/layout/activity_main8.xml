<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"


    tools:context="com.example.chinmay.tribe.Main8Activity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/image"
        android:src="@drawable/b8"/>






    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_marginRight="1dp"
        android:onClick="Pop"

        android:padding="10dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBaseline="@+id/vname"
        android:layout_alignBottom="@+id/vname"
        android:layout_alignParentEnd="true" />




<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Village Name"
    android:textStyle="bold"
    android:id="@+id/vname"
    android:textSize="22sp"
    android:textColor="#000000"
    android:layout_marginTop="19dp"
    android:layout_below="@+id/image"
    android:layout_alignParentStart="true"
    android:layout_marginStart="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vname"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/vname"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/star"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="Description"
                android:textColor="#757373"
                android:textSize="18sp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Culture"
                android:textStyle="bold"

            android:id="@+id/cult"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Culture Description"
                android:textColor="#757373"
                android:paddingLeft="10dp"
                android:id="@+id/culturedes"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textStyle="bold"


                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"

                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History Description"
                android:textColor="#757373"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/historydes"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speciality"
                android:textStyle="bold"


                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"

                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speciality"
                android:textColor="#757373"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/specialitydes"
                android:layout_marginTop="5dp"/>




        </LinearLayout>





    </ScrollView>




</RelativeLayout>

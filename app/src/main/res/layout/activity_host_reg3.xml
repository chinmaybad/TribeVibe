<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.chinmay.tribe.GuideReg">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content"

            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Enter Your Information"
                android:textColor="#111111"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"

                android:src="@drawable/add"
                android:id="@+id/image"

                android:layout_marginBottom="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Your Photo\n     (Long Press)"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="30dp"

                    android:textSize="20sp"

                    android:textColor="#000000"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <EditText
                    android:id="@+id/capacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000000"
                    android:hint="Capacity per Room"
                    android:textSize="20dp"


                    android:textColor="#101010"
                    android:imeActionId="@+id/v"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <EditText
                    android:id="@+id/nameofplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000000"
                    android:hint="Name of Place"
                    android:textSize="20dp"


                    android:textColor="#101010"
                    android:imeActionId="@+id/v"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000000"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#464646"
                    android:hint="Email"
                    android:textSize="20sp"


                    android:textColor="#313131"
                    android:imeActionId="@+id/r"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                >

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#464646"
                    android:hint="Contact No"



                    android:textColor="#313131"
                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                >

                <EditText
                    android:id="@+id/available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="No of Rooms Available"


                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#313131"
                    android:textColorHint="#464646"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                android:layout_column="0"
                android:layout_row="0"
                >

                <EditText
                    android:id="@+id/tariffnight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#464646"
                    android:ems="7"
                    android:hint="Tariff per Night"



                    android:textColor="#313131"
                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:textSize="20sp"

                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#313131"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="20dp"

                    android:textColorHint="#464646"
                    android:textStyle="bold"
                    android:text="Address of the property"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="0"
                        android:layout_column="0"
                        >

                <EditText
                    android:id="@+id/Street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#464646"
                    android:hint="Street"




                    android:textColor="#313131"
                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="none"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ems="8"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="0"
                        android:layout_column="1"
                        >

                        <EditText
                            android:id="@+id/PlotNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#464646"
                            android:hint="Plot No"




                            android:textColor="#313131"
                            android:imeActionId="@+id/h"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="none"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ems="8"
                            android:layout_marginBottom="10dp"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="1"
                        android:layout_column="0"
                        >

                        <EditText
                            android:id="@+id/locality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#464646"
                            android:hint="Locality"
                            android:textColor="#313131"
                            android:imeActionId="@+id/h"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="none"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ems="8"
                            android:layout_marginBottom="10dp"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="1"
                        android:layout_column="1"
                        >

                        <EditText
                            android:id="@+id/district"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#464646"
                            android:hint="District"
                            android:textColor="#313131"
                            android:imeActionId="@+id/h"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="none"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ems="8"
                            android:layout_marginBottom="10dp"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="2"
                        android:layout_column="0"
                        >

                        <EditText
                            android:id="@+id/State"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#464646"
                            android:hint="State"
                            android:textColor="#313131"
                            android:imeActionId="@+id/h"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="none"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ems="8"
                            android:layout_marginBottom="10dp"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:layout_row="2"
                        android:layout_column="1"
                        >

                        <EditText
                            android:id="@+id/pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#464646"
                            android:hint="Pin Code"
                            android:textColor="#313131"
                            android:imeActionId="@+id/h"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="number"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ems="8"
                            android:layout_marginBottom="10dp"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>





                </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="20dp"

                android:textColorHint="#464646"
                android:textStyle="bold"
                android:text="Enter Pictures of your Property"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop1"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop2"
                    android:layout_toRightOf="@+id/prop1"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:layout_toRightOf="@+id/prop2"
                    android:id="@+id/prop3"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop4"
                    android:layout_toRightOf="@+id/prop3"

                    android:layout_marginBottom="15dp"/>


            </RelativeLayout>





    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="SUBMIT" />
        </LinearLayout>
</ScrollView>


</RelativeLayout>

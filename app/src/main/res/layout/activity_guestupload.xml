<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="com.example.chinmay.tribe.guestupload">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.NoActionBar"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#f5f3f3"
            app:popupTheme="@style/AppTheme.NoActionBar" />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textColor="#000000"
        android:layout_marginTop="28dp"
        android:textStyle="italic"
        android:textSize="29sp"
        android:paddingLeft="15dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="230dp"
       android:layout_marginTop="150dp"
       android:onClick="imageup1"
       android:id="@+id/imageup"
       android:src="@drawable/ic_landscape_black_24dp"
       android:scaleType="fitXY"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:id="@+id/uploadfin"
        android:layout_marginStart="43dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/imageup"
        android:layout_alignParentStart="true" />



</RelativeLayout>

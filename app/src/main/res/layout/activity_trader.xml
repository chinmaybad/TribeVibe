<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.chinmay.tribe.trader">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content"

            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Enter Your Information"
                android:textColor="#111111"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/add"
                    android:id="@+id/image"

                    android:layout_marginBottom="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Your Photo\n     (Long Press)"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="30dp"

                    android:textSize="20sp"

                    android:textColor="#000000"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <EditText
                    android:id="@+id/shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000000"
                    android:hint="Shop Name"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"


                    android:textColor="#101010"

                    android:imeActionId="@+id/v"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="none"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000">

                <EditText
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000000"
                    android:hint="Category"
                    android:textSize="20dp"


                    android:textColor="#101010"
                    android:imeActionId="@+id/v"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="none"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#000000"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#464646"
                    android:hint="Email"
                    android:textSize="20sp"


                    android:textColor="#313131"
                    android:imeActionId="@+id/r"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="none"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                >

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColorHint="#464646"
                    android:hint="Contact No"



                    android:textColor="#313131"
                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                >

                <EditText
                    android:id="@+id/ownerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Name of Owner"


                    android:imeActionId="@+id/h"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#313131"
                    android:textColorHint="#464646"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="20dp"

                android:textColorHint="#464646"
                android:textStyle="bold"
                android:text="Address of the property"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#464646"

                        android:layout_marginTop="20dp"
                        android:text="Latitude"
                        android:paddingLeft="10dp"




                        android:textColor="#313131"

                        android:textSize="20sp"
                        android:maxLines="1"
                        android:ems="8"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true" />





                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#464646"
                        android:layout_below="@+id/latitude"
                        android:text="Longitude"
                        android:textColor="#313131"
                        android:paddingLeft="10dp"

                        android:textSize="20sp"
                        android:maxLines="1"
                        android:ems="8"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="get location"
                    android:layout_alignTop="@+id/latitude"
                    android:layout_toEndOf="@+id/latitude"
                    android:layout_marginStart="31dp"
                    android:onClick="loc"/>






            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="20dp"

                android:textColorHint="#464646"
                android:textStyle="bold"
                android:text="Enter Pictures of your Property"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop1"
                    android:scaleType="fitXY"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop2"
                    android:scaleType="fitXY"
                    android:layout_toRightOf="@+id/prop1"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:layout_toRightOf="@+id/prop2"
                    android:id="@+id/prop3"
                    android:scaleType="fitXY"

                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/ic_landscape_black_24dp"
                    android:id="@+id/prop4"
                    android:layout_toRightOf="@+id/prop3"

                    android:layout_marginBottom="15dp"/>


            </RelativeLayout>





            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="SUBMIT" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
